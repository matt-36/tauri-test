            },
            {
				"title": "Editor",
                "label": "tokens",
                "width": 400,
                "height": 200,
                "decorations": false,
                "resizable": false,
				"visible": false,
                "url": "tokens.html"
            },
            {
                "label": "proxies",
                "width": 400,
                "height": 200,
                "decorations": false,
                "resizable": false,
				"visible": false,
                "url": "proxies.html"
            }
		],
		"security": {
			"csp": "default-src blob: data: filesystem: ws: http: https: 'unsafe-eval' 'unsafe-inline'"
